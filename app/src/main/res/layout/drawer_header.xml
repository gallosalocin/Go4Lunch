<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/family_dinner_wide"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_drawer_user_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@drawable/moi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_drawer_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:gravity="bottom"
        tools:text="Nicolas VANTSIS"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/iv_drawer_user_image"
        app:layout_constraintTop_toTopOf="@+id/iv_drawer_user_image" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_drawer_mail"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        tools:text="gallosalocin@gmail.com"
        app:layout_constraintBottom_toBottomOf="@+id/iv_drawer_user_image"
        app:layout_constraintLeft_toRightOf="@+id/iv_drawer_user_image" />

</androidx.constraintlayout.widget.ConstraintLayout>